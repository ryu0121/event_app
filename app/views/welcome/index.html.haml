%h1 イベント一覧

= search_form_for @q, url: search_path do |f|
  = f.label :name, "名前"
  = f.search_field :name_cont
  = f.label :place, "場所"
  = f.search_field :place_cont
  = f.label :start_at, "開始時刻"
  = f.date_field :start_at_gteq
  = f.label :end_at, "終了時刻"
  = f.date_field :end_at_gteq
  = f.submit

%ul.list-group.m-3
  - @events.each do |event|
    = link_to(event, class: "list-group-item list-group-item-action") do
      %h5.list-group-item-heading= event.name
      %p.mb-1= "#{l(event.start_at, format: :long)} - #{l(event.end_at, format: :long)}"

= paginate @events